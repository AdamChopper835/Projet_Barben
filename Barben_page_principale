        <body>
            
            <!-- Bouton stylé -->
            <h3><button id="show-image-btn">Carte du zoo</button></h3>
            <h3><button id="show-image-btn">Laisser un avis</button></h3>
            <!-- Conteneur pour l'image -->
            <div id="image-container"></div>
        <script>
            // Récupérer les éléments
            const button = document.getElementById('show-image-btn');
            const imageContainer = document.getElementById('image-container');
    
            // Chemin de l'image
            const imagePath = 'plan_du_parc.jpg';
    
            // Ajouter l'événement au bouton
            button.addEventListener('click', function () {
                // Créer l'image dynamiquement
                const img = document.createElement('img');
                img.src = imagePath;
                img.alt = "Image dynamique";
    
                // Vider le conteneur avant d'ajouter une nouvelle image
                imageContainer.innerHTML = '';
                imageContainer.appendChild(img);
            });
        </script>
